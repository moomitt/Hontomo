<div class="container-fluid admin">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="heading my-5 mx-4 px-4 pb-3">
        管理者ページ
      </h4>
    </div>

    <div class="col-11 mx-auto mb-4">
      <h5>
        <i class="fas fa-shield-alt fa-lg fa-fw mr-3"></i>
        管理者ログイン
      </h5>
    </div>

    <div class="col-sm-10 col-11 mx-auto mb-5 px-0">
      <%= form_with model: @admin, url: admin_session_path, class: "form-horaizontal" do |f| %>
        <div class="row input-group-sm ml-4 mr-3 d-flex align-items-center">
          <label class="label-control col-md-3 mb-3 px-0">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "col-lg-5 col-md-6 form-control mb-3"  %>
        </div>

        <div class="row input-group-sm ml-4 mr-3 d-flex align-items-center">
          <label class="label-control col-md-3 mb-3 px-0">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password",
          class: "col-lg-3 col-md-4 form-control mb-3"  %>
        </div>

        <div class="row input-group-sm ml-4 mr-3 d-flex align-items-center">
          <label class="label-control col-md-3"></label>
          <%= f.submit "ログイン", class: "btn btn-main px-5 my-4" %>
        </div>
      <% end %>
    </div>

  </div>
</div>

