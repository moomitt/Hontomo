<div class="container-fluid" style="padding-top:80px; padding-bottom:200px; background-color:#F3F5F7;">
  <div class="row">
    <div class="col-lg-11 mx-auto">
      <h4 class="my-5 ml-4">
        <i class="fas fa-shield-alt fa-lg fa-fw mr-3"></i>
        管理者ログイン
      </h4>
    </div>
    
    <div class="col-lg-9 col-md-9 col-10 mx-auto">
      <%= form_with model: @admin, url: admin_session_path, class: "form-horaizontal" do |f| %>
        <div class="row input-group-sm d-flex align-items-center">
          <label class="label-control col-lg-3 col-md-3 mb-3 px-0">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "col-lg-5 col-md-6 form-control mb-3"  %>
        </div>
        
        <div class="row input-group-sm d-flex align-items-center">
          <label class="label-control col-lg-3 col-md-3 mb-3 px-0">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password",
          class: "col-lg-3 col-md-4 form-control mb-3"  %>
        </div>
        
        <div class="row input-group-sm d-flex align-items-center">
          <label class="label-control col-lg-3 col-md-3"></label>
          <%= f.submit "ログイン", class: "btn btn-main px-5 my-4"  %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>

