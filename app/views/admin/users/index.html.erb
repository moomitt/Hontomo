<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h3 class="my-5 ml-4">会員一覧<small>　(全<%= @users.count %>件)</small></h3>
    </div>
    
    <div class="col-10">
      <table class="table table-hover table-bordered">
        <thead class="table-active">
          <th>会員ID</th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == false %>
                  <strong class="text-success">有効</strong>
                <% else %>
                  <strong class="text-secondary">退会</strong>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
