<div class="container">
  <div class="row">
    
    <div class="col-12">
      <h3 class="my-5 ml-4"><%= @user.name %>さんの会員情報</h3>
    </div>
    
    <div class="col-10 mx-auto">
      <div class="row ml-4">
        <label class="col-lg-2">会員ID</label>
        <p class="col-lg-2"><%= @user.id %></p>
      </div>
      
      <div class="row ml-4">
        <label class="col-lg-2">ニックネーム</label>
        <p class="col-lg-2"><%= @user.name %></p>
      </div>
      <div class="row ml-4">
        <label class="col-lg-2">メールアドレス</label>
        <p class="col-lg-3"><%= @user.email %></p>
      </div>
      
      <div class="row my-5">
        <label class="col-lg-2"></label>
        <%= link_to '編集する', edit_admin_user_path,
        :class => "btn btn-sm btn-success px-4" %>
        <%= link_to 'コメント一覧を見る', admin_user_comment_path,
        :class => "btn btn-sm btn-primary ml-5 px-4" %>
      </div>
    </div>
    
  </div>
</div>

