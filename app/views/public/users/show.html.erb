<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="my-5"><%= @user.name %>　さんのマイページ</h4>
    </div>
    
    <div class="col-10 mx-auto">
      <h4 class="mb-4 d-inline-block">会員情報</h4>
      <%= link_to '登録情報の編集はこちら', users_information_edit_path, :class => "btn btn-sm btn-success ml-5 px-4" %>
      <div class="row ml-4">
        <label class="col-lg-2">ニックネーム</label>
        <p class="col-lg-2"><%= @user.name %></p>
      </div>
      <div class="row ml-4">
        <label class="col-lg-2">メールアドレス</label>
        <p class="col-lg-3"><%= @user.email %></p>
      </div>
    </div>
    
    <div class="col-10 mx-auto">
      <h4 class="my-5">お気に入り登録リスト</h4>
      <% @bookmarks.each do |bookmark| %>
        <div class="d-inline-block" style="vertical-align: top; width: 20%;">
        <%= link_to book_path(bookmark.book_id) do %>
          <div class="border" style="width: 150px; height: 200px;">
          <% if bookmark.book.isbn.present? %>
            <% item = RakutenWebService::Books::Book.search(isbn: bookmark.book.isbn).first %>
            <%= image_tag(item.large_image_url) %>
          <% end %>
          </div>
          <p class="mt-3 mb-1"><strong><%= bookmark.book.name %></strong></p>
          <p><%= bookmark.book.author %></p>
        <% end %>
        </div>
      <% end %>
    </div>
    
    
    
  </div>
</div>
