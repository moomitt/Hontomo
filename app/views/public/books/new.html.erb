<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="my-5">本の新規登録</h4>
    </div>
    
    <div class="col-10 mx-auto">
      <%= form_with model: @book, url: new, :class => "form-horaizontal" do |f| %>
        <div class="row input-group-sm mb-2">
          <label class="col-lg-2">ニックネーム</label>
          <%= f.text_field :name, :class => "form-control col-lg-3" %>
        </div>
        <div class="row input-group-sm mb-2">
          <label class="col-lg-2">メールアドレス</label>
          <%= f.email_field :email, :class => "form-control col-lg-4" %>
        </div>
        <div class="row input-group-sm mb-2 mt-5">
          <label class="col-lg-2"></label>
          <%= f.submit '変更を保存', :class => "btn btn-success px-5 mr-3" %>
          <%= link_to '退会する', users_confirm_path, :class => "btn btn-danger px-5 ml-5" %>
        </div>
        <% end %>
    </div>
  </div>
</div>