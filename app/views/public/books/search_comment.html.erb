<div class="container-fluid" style="padding-top:80px">
  <div class="row">
    <div class="col-12">
      <h4 class="my-5">本をみる</h4>
    </div>
    
    <div class="col-11 mx-auto">
      <h5 class="mb-4">
        <i class="fas fa-comment-alt fa-lg fa-fw mr-3"></i>
        コメント検索　<small>全<%= @search_comments.count %>件　キーワード:<%= "#{params[:keyword]}" %></small>
      </h5>
      
      <div class="">
        <% @search_comments.each do |comment| %>
          <div class="col-12 bg-light px-4 pt-3 pb-2 mb-3">
            <p><%= comment.text %></p>
            <p class="d-inline-block">
              <small>投稿者:　<%= comment.user.name %></small>
              <small class="ml-5">投稿日時： <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></small>
            </p>
              <div id="goods_buttons_<%= comment.id %>" class="d-inline-block">
                <%= render partial: 'public/goods/good', locals: { book: @book, comment: comment } %>
              </div>
          </div>
        <% end %>
      </div>
      
      <%= link_to '一覧に戻る', book_path(@book.id), class: "btn btn-main px-4" %>
      <% if user_signed_in? %>
        <%= link_to new_book_comment_path(@book.id), class: "btn btn-accent px-3 my-4" do %>
          <i class="fas fa-pen fa-fw mr-2"></i>感想コメントを投稿
        <% end %>
      <% end %>
    
  </div>
</div>