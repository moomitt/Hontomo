<div class="container-fluid"
style="min-height: calc(100vh - 70px); padding-top:80px; padding-bottom: 60px; background-color: #FAF8F8;">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="my-5 mx-4 px-4 pb-3" style="border-bottom: 1.5px solid #616F7C;">
        本をみる
      </h4>
    </div>
    
    <div class="col-md-11 col-11 mx-auto mb-4">
      <h5 class="">
        <i class="fas fa-comment-alt fa-lg fa-fw mr-3"></i>
        コメント検索
        <small>　 全<%= @search_comments.count %>件</small>
      </h5>
      <p class="my-3 ml-3">検索ワード:　<%= "#{params[:keyword]}" %></p>
    </div>
    
    <div class="col-lg-10 col-md-10 col-sm-10 col-10 mx-auto">
      <div class="row" style="max-width:1200px">
        <% @search_comments.each do |comment| %>
          <div class="col-lg-11 col-12 px-3 pt-3 pb-2 mb-3 card-comment" style="max-width:800px">
            <p class="pb-0" style="font-size:0.95rem"><%= comment.text %></p>
            <div class="row text-right">
              <p class="col-lg-7 col-sm-6 col-12 my-0"><small>投稿者： <%= comment.user.name %></small></p>
              <p class="col-lg-4 col-sm-4 col-9 my-0"><small>投稿日時： <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></small></p>
              <div id="goods_buttons_<%= comment.id %>" class="col-lg-1 col-sm-2 col-3 text-right">
                <%= render partial: 'public/goods/good', locals: { book: @book, comment: comment } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to '一覧に戻る', book_path(@book.id), class: "btn btn-sm btn-main mt-3 px-3 mr-3" %>
      <% if user_signed_in? %>
        <%= link_to new_book_comment_path(@book.id), class: "btn btn-sm btn-accent mt-3 px-3 mr-3" do %>
          <i class="fas fa-pen fa-fw mr-2"></i>感想コメントを投稿
        <% end %>
      <% end %>
    </div>
    
  </div>
</div>